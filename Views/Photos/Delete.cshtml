@model PhotoAdventureWorks.Models.Photo

@{
    ViewBag.Title = "Borrar Foto";
}

<h2>Borrar Foto</h2>

<div class="container bg-light p-sm-5" style="border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">

    <div class="form-horizontal">
        <h4>¿Estás seguro que deseas borrar esta foto?</h4>
        <hr />

        <div class="form-group">
            <div class="col-md-10">
                <center>
                    <img src="@Model.PhotoFile" alt="@Model.Title" class="img-fluid" style="max-height: 75%; max-width: 75%; object-fit: contain; align-content:safe center" />
                </center>
            </div>
        </div>

        <hr>

        <div class="form-group">
            <div class="col-md-10">
                <p><strong>Titulo:</strong></p>
                <p class="form-control-static">@Model.Title</p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p><strong>Descripcion:</strong></p>
                <p class="form-control-static">@Model.Description</p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p><strong>Fecha de captura:</strong></p>
                <p class="form-control-static">@Model.CreatedDate.ToShortDateString()</p>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <p><strong>Subida por:</strong></p>
                <p class="form-control-static">@User.Identity?.Name</p>
            </div>
        </div>

        @using (Html.BeginForm("Delete", "Photos", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.PhotoID)
            <div class="form-group">
                <input type="submit" value="Borrar" class="btn btn-danger" />
                <a asp-action="Details" asp-route-id="@Model.PhotoID" class="btn btn-secondary">Cancelar</a>
            </div>
        }
    </div>

</div>
