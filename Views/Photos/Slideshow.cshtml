@model IEnumerable<PhotoAdventureWorks.Models.Photo>

@{
    ViewData["Title"] = "SlideShow";
}

<div class="row bg-light p-4" style="border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <div class="col-md-12 d-flex justify-content-between align-items-center">
        <p class="mb-0">Agrega tus fotos:</p>
        <a asp-action="Upload" class="btn btn-primary">Subir Foto</a>
    </div>
</div>

<div>
    <br />
</div>

<div class="row bg-light p-4" style="border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    
    <div id="myCarousel" class="carousel slide" data-ride="carousel">

        <!-- Indicators -->
        <ol class="carousel-indicators">
            @for (int i = 0; i < Model.Count(); i++)
            {
                <li data-target="#myCarousel" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
            }
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            @foreach (var photo in Model)
            {
                <div class="carousel-item @(photo == Model.First() ? "active" : "")">
                    <img src="@photo.PhotoFile" class="d-block w-100" alt="@photo.Title" style="height: 700px; object-fit:contain;">

                    <div class="carousel-caption d-none d-md-block">
                        <h5>@photo.Title</h5>
                        <p>@photo.Description</p>
                    </div>
                </div>

            }
        </div>

        <!-- Left and right controls -->
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previa</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Siguiente</span>
        </a>
    </div>

</div>

@section Scripts {
    <script>
        $('.carousel').carousel({
            interval: 300
        })
    </script>
}

