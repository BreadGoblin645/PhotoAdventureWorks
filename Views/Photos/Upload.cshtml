@model PhotoAdventureWorks.Models.Photo
@{
    ViewData["Title"] = "Subir Foto";
}

<h2>Subir Foto</h2>

<div class="container bg-light p-3" style="border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Upload" asp-controller="Photos" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Title">Titulo de la foto:</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Descripcion:</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CreatedDate">Fecha de captura:</label>
                    <input type="date" asp-for="CreatedDate" class="form-control" />
                    <span asp-validation-for="CreatedDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Seleccionar foto a subir:</label>
                    <input type="file" name="upload" class="form-control" />
                    <span class="text-danger">@ViewBag.UploadError</span>
                </div>
                <br />
                <button type="submit" class="btn btn-primary">Guardar Foto</button>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
